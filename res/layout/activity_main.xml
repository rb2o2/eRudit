<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linLayoutL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#c0c0c0" >

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="А"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Б"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="В"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Г"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Д"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Е"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0"
            android:gravity="center"
            android:longClickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Ж"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/board" >

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rows"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/rl1"
        android:layout_alignLeft="@+id/rl1"
        android:layout_alignRight="@+id/rl1"
        android:clipChildren="true"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linLayoutL"
        android:layout_alignRight="@+id/rl1"
        android:layout_marginBottom="20dp"
        android:text="очистить поле" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/rl1"
        android:text="сдать буквы" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl1"
        android:layout_below="@+id/rl1"
        android:text="очки за выделенные слова:" />

</RelativeLayout>